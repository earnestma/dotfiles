# ~/.gitconfig

[include]
	path = ~/.gitconfig.local
	path = ~/.gitconfig.secret

[user]
	name = earnest ma
	email = me@earne.link
	signingkey = 80AE985F9B4E3FB438E192996B361FA81C5FB695

[color]
	ui = true

[core]
	autocrlf = false
	quotepath = false
	commitGraph = true
	longpaths = true

[commit]
	gpgsign = true

[init]
	defaultBranch = main

[gc]
	writeCommitGraph = true

[credential]
	helper = store

