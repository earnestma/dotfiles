# ~/.gitconfig

[include]
	path = ~/.gitconfig.local
	path = ~/.gitconfig.secret

[user]
	name = earnest ma
	email = me@earne.link
	signingkey = 80AE985F9B4E3FB438E192996B361FA81C5FB695

[color]
	ui = true

[core]
	autocrlf = false
	quotepath = false
	commitGraph = true
	longpaths = true
	editor = nvim

[commit]
	gpgsign = true
	verbose = true

[init]
	defaultBranch = main

[status]
	submodulesummary = true

[gc]
	writeCommitGraph = true

[fetch]
	prune = true

[pull]
	ff = only

[push]
	default = current

[credential]
	helper = store

# Stored in ~/.gitconfig.secret
# [sendemail]
#	smtpserver = mail.example.com
#	smtpuser =
#	smtpencryption = tls
#	smtpserverport = 587
#	smtpPass = - or not (credential)
#	annotate = yes
# [imap]
#	host = imaps://mail.example.com
#	user =
#	pass =
#	port = 993

[alias]
	checkup = !git log -1 && (git fetch --all 2>/dev/null || true) && git status
	fuckit = reset --hard
	setup = !git init && git commit --allow-empty -m \"Initial commit\"
	# usual ---
	br = branch
	co = checkout
	ca = commit --amend
	ce = commit --allow-empty-message -m ''
	cm = commit
	cv = commit -v
	di = diff
	lg = log
	mg = merge
	pu = push
	pl = pull
	st = status

[help]
	autocorrect = 20
